<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/detailImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/detailVille"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ville"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/detailQuartier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quartier"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/detailType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/detailCommentaire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Commentaire" />

        <TextView
            android:id="@+id/detailDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date et Heure"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editEtat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ã‰tat"
            android:inputType="text"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/btnEnregistrer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enregistrer"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</ScrollView>
