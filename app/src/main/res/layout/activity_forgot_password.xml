<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Back arrow -->
        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/angle_small_left"
            android:contentDescription="Back"
            android:layout_gravity="start"
            android:layout_marginBottom="32dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mot de passe oubliÃ©"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/subtitle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entrez votre numero de telephone ou adresse email"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginBottom="24dp" />

        <!-- Email or Phone Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adresse email ou numero"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/input_email_or_phone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/code_input_background"
            android:hint="name@email.com ou numero"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textSize="14sp" />

        <!-- Send Button -->
        <Button
            android:id="@+id/send_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Envoyer"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:backgroundTint="#00AA00" />
    </LinearLayout>
</ScrollView>
