<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white"
    tools:context=".SignalementActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <!-- Header vert -->
        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@color/green"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/angle_small_left"
                android:contentDescription="@string/retour" />

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/faire_un_signalement"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Image + boutons -->
        <FrameLayout
            android:id="@+id/imagePhotoFrame"
            android:layout_width="287dp"
            android:layout_height="172dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/image_rounded_background"
            android:clipToOutline="true"
            app:layout_constraintTop_toBottomOf="@id/headerLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/imageViewPhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/poubelle_eco"
                android:contentDescription="Photo signalement" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/actionButtons"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/imagePhotoFrame"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/buttonCamera"
                android:layout_width="0dp"
                android:layout_height="49dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:backgroundTint="#208020"
                android:text="@string/filmer"
                app:icon="@drawable/icon_camera"
                android:textAlignment="center" />

            <Button
                android:id="@+id/buttonGalleryPhone"
                android:layout_width="0dp"
                android:layout_height="49dp"
                android:layout_weight="1"
                android:backgroundTint="#208020"
                android:text="@string/galerie"
                app:icon="@drawable/icon_folder"
                app:iconGravity="textStart" />
        </LinearLayout>

        <!-- Champs de texte -->

        <EditText
            android:id="@+id/ptNomVille"
            android:layout_width="340dp"
            android:layout_height="49dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edittext_border"
            android:hint="@string/nom_de_la_ville"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/actionButtons" />

        <EditText
            android:id="@+id/ptNomQuartier"
            android:layout_width="340dp"
            android:layout_height="49dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_border"
            android:hint="@string/nom_du_quartier"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/ptNomVille"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Description multilignes -->
        <EditText
            android:id="@+id/mvCom"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:minLines="4"
            android:maxLines="6"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:background="@drawable/edittext_border"
            android:hint="@string/description"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/ptNomQuartier"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Bouton Soumettre -->
        <Button
            android:id="@+id/soumettreBtn"
            android:layout_width="337dp"
            android:layout_height="49dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#208120"
            android:text="@string/soumettre"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/mvCom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
