<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/accueil"
    tools:context=".AccueilActivity">

    <!-- Icône notification -->
    <FrameLayout
        android:id="@+id/notificationIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iconBell"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="Notification"
            android:src="@drawable/notifications" />

        <!-- Pastille rouge -->
        <View
            android:id="@+id/redDot"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/red_circle" />
    </FrameLayout>

    <!-- Barre de recherche -->
    <androidx.cardview.widget.CardView
        android:id="@+id/searchCard"
        android:layout_width="300dp"
        android:layout_height="43dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="50dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/notificationIcon"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="8dp">

            <!-- Bouton filtre -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#1D3C84"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/sort"
                    app:tint="@android:color/white" />
            </LinearLayout>

            <!-- Zone recherche + icône loupe -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <EditText
                    android:id="@+id/searchInput"
                    android:layout_width="199dp"
                    android:layout_height="41dp"
                    android:background="@null"
                    android:hint="Rechercher par Ville, quartier, heure..."
                    android:inputType="text"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/iconSearch"
                    app:layout_constraintHorizontal_bias="0.444"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.6"
                    tools:ignore="TouchTargetSizeCheck" />

                <ImageView
                    android:id="@+id/iconSearch"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="4dp"
                    android:contentDescription="Rechercher"
                    android:src="@drawable/cross_small"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Filtres -->
    <HorizontalScrollView
        android:id="@+id/filterScrollView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fillViewport="true"
        android:padding="8dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchCard">

        <LinearLayout
            android:id="@+id/filterLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/ChipFilter"
                android:backgroundTint="#E0F0E9"
                android:text="RECENT"
                tools:ignore="TextContrastCheck" />

            <TextView
                style="@style/ChipFilter"
                android:backgroundTint="#5C6CFA"
                android:text="TOTAL"
                android:textColor="@android:color/white"
                tools:ignore="TextContrastCheck" />

            <TextView
                style="@style/ChipFilter"
                android:backgroundTint="#FF3C62"
                android:text="URGENCE"
                android:textColor="@android:color/white"
                tools:ignore="TextContrastCheck" />

            <TextView
                style="@style/ChipFilter"
                android:backgroundTint="#FFA726"
                android:text="EN COURS"
                android:textColor="@android:color/white"
                tools:ignore="TextContrastCheck" />

            <TextView
                style="@style/ChipFilter"
                android:backgroundTint="#66BB6A"
                android:text="TRAITÉ"
                android:textColor="@android:color/white"
                tools:ignore="TextContrastCheck" />

            <!-- Tu peux en ajouter encore ici, et le ScrollView permettra le défilement -->

        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/textViewNouveauSignalement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Nouveau signalement"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filterScrollView" />

    <!-- RecyclerView horizontal -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewRecent"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewNouveauSignalement" />

    <TextView
        android:id="@+id/textViewAutre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Autres..."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewRecent" />

    <TextView
        android:id="@+id/textViewVoirplus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Voir plus"
        android:textColor="#4F6AFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewRecent" />

    <!-- RecyclerView vertical -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAll"
        android:layout_width="396dp"
        android:layout_height="230dp"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewVoirplus" />


    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/white"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recyclerViewAll"
        app:menu="@menu/bottom_nav_menu" />


</androidx.constraintlayout.widget.ConstraintLayout>