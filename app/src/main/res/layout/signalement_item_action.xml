<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Image -->
        <ImageView
            android:id="@+id/imageSignalement"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:background="@drawable/image_rounded_background"
            android:contentDescription="Image signalement"
            android:scaleType="centerCrop" />

        <!-- Texte (poids 1) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp">

            <!-- Type -->

            <!-- Ville -->
            <TextView
                android:id="@+id/tvNomVille"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ville"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Quartier -->
            <TextView
                android:id="@+id/tvNomQuartier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quartier"
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

            <!-- Commentaire -->
            <TextView
                android:id="@+id/tvCommentaire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Commentaire..."
                android:textColor="#444444"
                android:textSize="13sp"
                android:layout_marginTop="2dp" />

            <!-- Date + Etat -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvDateHeure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12/12/2024 10:00"
                    android:textSize="12sp"
                    android:textColor="#999999" />

                <TextView
                    android:id="@+id/tvEtat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Urgent"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:layout_marginStart="10dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Flèche pour voir détail -->
        <ImageView
            android:id="@+id/ivDetailsArrow"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@android:drawable/ic_media_next"
            android:contentDescription="Détails" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
